# CHABS Inventory System Environment Variables

# Authentication
ADMIN_PASSWORD=your_secure_admin_password
WAREHOUSE_PASSWORD=your_secure_warehouse_password
NEXT_PUBLIC_ADMIN_EMAIL=admin@chabs.com
NEXT_PUBLIC_WAREHOUSE_EMAIL=warehouse@chabs.com

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Database (if using cloud storage)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development